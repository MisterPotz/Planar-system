            <TextField fx:id="mTextField" promptText="Введите значение" GridPane.columnIndex="1" />
            <TextField fx:id="alphaTextField" promptText="Введите значение" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField fx:id="betaTextField" promptText="Введите значение" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </GridPane>
   </children>
</AnchorPane>
